#include <stdio.h>
#define TAM 7

//Usando int para inverter numero

main(){
	int x, y = 0, z, num = 0, primeira = 0;
	int armazena[TAM] = { };
    
    
    printf("Numero:\n");
    scanf("%d",&num);
    
    //desintegrando a variavel
    for(x = 0;x < TAM;x++){  	
    	armazena[x]= num%10;
    	num = num/10;
    	
    	if(num < 10){
    	   if(num == 0){
    	 	 primeira = x +1; //pq x comeÃ§a em 0
    	     break;
    	   }
    	}
     }
	
	//refazendo a variavel
	for (y = primeira; y >= 0; y--){
             z = 1;
    
             num = armazena[y]*z;
             z *= 10;  
        }
    
    printf("%d", num); 
//	for(y = 0; y < primeira; y++)
	//	printf("%d", armazena[y]);
	  
}
